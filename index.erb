<html>
  <head>
    <title>New Tracks</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style type="text/css">
      .container { margin-top: 8px; }
      a.btn { margin: 4px; }
      .last-viewed { font-weight: bold; }
    </style>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script type="text/javascript">
      $(document).ready(() => {
        const lastViewed = $('.last-viewed');
        if (lastViewed.length > 0) {
          lastViewed[0].scrollIntoView({ behavior: 'instant', block: 'center' });
        }
      });
    </script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <h5>
          <%= playlist_tracks.size %> new track<%= playlist_tracks.size == 1 ? '' : 's' %>
          <a href="/reverse"><ion-icon name="arrow-<%= reverse ? 'up' : 'down' %>-outline" size="small"></ion-icon></a>
        </h5>
      </div>
      <div class="row">
        <ul>
        <% playlist_tracks.each do |track| %>
          <li<%= ' class="last-viewed"' if track.id == last_viewed %>><a href="/track/<%= track.id %>"><%= track.desc %></li>
        <% end %>
        </ul>
      </div>
      <div class="row">
        <a href="/album" class="btn btn-sm btn-primary">Album</a>
      </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  </body>
</html>
